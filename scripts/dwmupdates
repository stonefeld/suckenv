#!/bin/bash

source dwmconfig

case $BUTTON in
	1) pacupdatecheck &;;
esac

updates="$(cat ${XDG_DATA_HOME:-$HOME/.local/share}/updates)"
if [ "$COLORED" = true ]; then
	pgrep -x pacupdatecheck >/dev/null && icon=" ðŸ”„"
	echo " ðŸ“¦ $updates$icon |"
else
	# pgrep -x pacupdatecheck >/dev/null && icon=" $(cl 'gr' '')ó°‘“^d^"
	# pgrep -x pacupdatecheck >/dev/null && icon=" ó°‘“"
	pgrep -x pacupdatecheck >/dev/null && icon=" (*)"
	# echo " ó°¬¦ $updates$icon  "
	echo " $(cl 'bl' '')Updates$icon: $(cl 'wh' '')$updates "
fi
